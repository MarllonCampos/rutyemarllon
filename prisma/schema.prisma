generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  description      String
  imageurl         String
  reserved         Boolean  @default(false)
  reservedPeopleId Int?
  reservedPerson   People?  @relation("PeopleToProduct", fields: [reservedPeopleId], references: [id])
  createdat        DateTime @default(now()) @map("created_at")
  updatedat        DateTime @default(now()) @map("updated_at")

  @@map("products")
}

model People {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  whatsApp  String
  lastName  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  reservedProducts Product[] @relation("PeopleToProduct")

  @@map("people")
}

model Attendance {
  id           Int          @id @default(autoincrement())
  name         String
  whatsApp     String?
  comingWithId Int? // Campo opcional para armazenar o ID de quem a pessoa est√° vindo
  comingWith   Attendance?  @relation("AttendanceToAttendance", fields: [comingWithId], references: [id])
  guests       Attendance[] @relation("AttendanceToAttendance")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")

  @@map("attendance")
}
